@model Forma_1.Models.Team

<div class="container-fluid">
		
    <h1>Add new team</h1>
    
    <div class="row">
        <div class="col-md-12">
            <form asp-action="SaveTeam" asp-controller="Home" method="post" class="form-horizontal" style="margin: 10px" enctype="multipart/form-data">
                @Html.ValidationSummary(true, "Please correct the following errors.") 
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="@Model.Id">

                <div class="form-group">
                    <label class="control-label col-sm-2" for="Name">Team Name</label>
                    <input type="text" class="form-control" placeholder="Team name" asp-for="@Model.Name">

                </div> 
                <div class="form-group">
                    <label class="control-label col-sm-2" for="Founded">Founded</label>
                    <input type="text" class="form-control" placeholder="Founded" asp-for="@Model.Founded">
                </div>
                
                <div class="form-group">
                    <label class="control-label col-sm-2" for="Wins">Championship wins</label>
                    <input type="text" class="form-control" placeholder="Championship wins" asp-for="@Model.Wins">
                </div>
                
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" asp-for="@Model.IsPaid">
                    <label class="custom-control-label" for="IsPaid">Payment completed </label>
                </div>

                <input type="submit" class="btn btn-primary " value="Submit" />
            </form>
        </div>
    </div> 
</div>